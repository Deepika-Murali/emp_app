<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
        <ul>
          
          <% employee.errors.full_messages.each do |message| %>
              
                 <li>
                   <%= message %>
                 </li>
              
          <% end %>
          
          <% if employee.errors[:Age].any? %>
            <li>
                Age should be between 20 and 61
            </li>
          <% end %>
          <% if employee.errors[:Sex].any? %>
            <li>
               Sex should be either male, female or transgender
            </li>
          <% end %>
         
        </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :Name %>
    <%= form.text_field :Name %>
  </div>

  <div class="field">
    <%= form.label :Age %>
    <%= form.number_field :Age %>
  </div>

  <div class="field">
    <%= form.label :Sex %>
    <%= form.text_field :Sex %>
  </div>

  <div class="field">
    <%= form.label :Designation %>
    <%= form.text_field :Designation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
