
<h3>Employees</h3>

<table>
  <thead>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Sex</th>
        <th>Designation</th>
        <th colspan="4"></th>
    </tr>
    <tr>
        <th>-----</th>
        <th>----</th>
        <th>----</th>
        <th>------------</th>
        <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.Name %></td>
        <td><%= employee.Age %></td>
        <td><%= employee.Sex %></td>
        <td><%= employee.Designation %></td>
    
        <td><%= link_to 'Show', employee %></td>  
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




